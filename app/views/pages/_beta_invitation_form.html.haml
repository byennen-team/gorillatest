/ Modal
#myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
  = simple_form_for @beta_invitation do |f|
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
          %h4#myModalLabel.modal-title Beta Invitation
        .modal-body
          %p Please fill out the form for an invitation.
          - if @beta_invitation.errors.any?
            #error_explanation
              %h2= "#{pluralize(@beta_invitation.errors.count, "error")} prohibited this beta_invitation from being saved:"
              %ul
                - @beta_invitation.errors.full_messages.each do |msg|
                  %li= msg
          = f.input :first_name, label: "First Name (required)"
          = f.input :last_name, label: "Last Name (required)"
          = f.input :email, label: "Email (required)"

        .modal-footer
          = f.submit 'Send Request', class: 'btn btn-success btn-lg beta-invite-submit-button', disabled: 'disabled'

