.page-content.blocky
  .container
    .pull-right
      %button.btn.btn-danger{onclick: "alert('Feature not implemented')"}
        %span.glyphicon.glyphicon-remove
        Remove Scenario
    %ol.breadcrumb
      %li
        = link_to "Projects", projects_path
      %li
        = link_to @project.name, project_path(@project)
      %li
        = link_to @feature.name, project_feature_path(@project, @feature)
      %li.active
        = link_to "Test Runs", project_feature_test_runs_path(@project, @feature)

    %br
    %br
    - @feature.test_runs.reverse.each do |test_run|
      - if test_run.status != nil
        .test_run{class: test_run.status}
          = render partial: 'test_run', locals: {test_run: test_run}
      - else
        .test_run
          = render partial: 'test_run', locals: {test_run: test_run}
        %br{style: "clear: both;"}
