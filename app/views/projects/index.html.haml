-content_for :head do
  =javascript_include_tag "stepStatus"

.page-content.blocky
  .container
    .pull-right
      %button.btn.btn-success{data: {toggle: "modal", target: "#add-project"}}
        %span.glyphicon.glyphicon-plus
        Add Project
    %ol.breadcrumb
      %li.active
        = link_to "Projects", projects_path
    .row
      .col-md-12
        / Project widget
        .awidget
          /.awidget-head
          / .pull-right
          /   %a{data: {toggle: "modal", target: "#add-project"}} Add Project
          / %h3 Projects
          .awidget-body
            - if current_user.projects.size == 0
              %p
                You don't current have any projects, would you like to
                %a{href: new_project_path, data: {toggle: "modal", target: "#add-project"}} create one
            - else
              %ul.project
                = render partial: 'project', collection: @projects
              .clearfix


#add-project.modal.fade
  .modal-dialog
    .modal-content
      = simple_form_for Project.new do |f|
        .modal-header
          -unless current_user.projects.size == 0
            %button.close{data: {dismiss: "modal"}, aria:{hidden: true}} &times;
          %h4.modal-title Add Project
        .modal-body
          = f.input :name
          = f.input :url
        .modal-footer
          -unless current_user.projects.size == 0
            %button.btn.btn-info{data: {dismiss: "modal"}, aria: {hidden: true}} Close
          = f.submit "Add Project", class: "btn btn-primary"
