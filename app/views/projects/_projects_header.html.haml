.row
  .col-sm-12
    .project-title#tour-project-show-overview#tour-project-show-start
      %h1#tour-now-your-turn
        = link_to @project.name, project_path(@project)
        - if params[:controller] == "test_runs"
          = " - "
          = link_to @scenario.name, project_test_test_runs_path(@project, @scenario.slug)
        - if @test_run
          %br
          %i.test-run-created-by
            created by: #{@test_run.user.name}
    .project-links
      .btn-group
        - if @scenario
          = link_to project_test_path(@project, @scenario), method: :delete, confirm: "Are you sure?", class: 'btn btn-default delete-test-button', rel: "tooltip", title: "Delete Test" do
            %i.fa.fa-trash-o

