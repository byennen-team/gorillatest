.row
  .col-sm-12
    .project-title#tour-project-show-overview#tour-project-show-start
      %h1
        = link_to @project.name, project_path(@project)
        - if params[:controller] == "test_runs"
          = " - "
          = link_to @scenario.name, project_test_test_runs_path(@project, @scenario.slug)
    .project-links
      .btn-group
        = link_to edit_project_path(@project), "data-original-title" => "Mark Important", "data-placement" => "bottom", rel: "tooltip", title: "Settings", class: "btn btn-default btn-sm" do
          %strong
            %i.fa.fa-cog.fa-lg
        = link_to invitations_path(project_id: @project.id.to_s), "data-original-title" => "Move to folder", "data-placement" => "bottom", rel: "tooltip", title: "Invite", class: "btn btn-default btn-sm" do
          %strong
            %i.fa.fa-user.fa-lg
- if @project.scenarios.size > 0
  .project-stats.row
    .col-sm-7#tour-project-show-overview
      .row
        .col-sm-1
          .badge.alert-success{"data-original-title" => "Move to folder", "data-placement" => "bottom", rel: "tooltip", title: "Passed"} 11
        .col-sm-1
          .badge.alert-danger{"data-original-title" => "Move to folder", "data-placement" => "bottom", rel: "tooltip", title: "Failed"} 10
        .col-sm-1
          .badge.alert-info{"data-original-title" => "Move to folder", "data-placement" => "bottom", rel: "tooltip", title: "Running"} 9
        - if params[:controller] == "projects"
          .col-sm-2#tour-project-show-run-all
            = play_button(@project, "Run All")
            = render 'projects/select_browsers_all'
          .col-sm-2#tour-project-show-create-test
            = link_to link_to_record(@project), target: '_blank', class: 'btn btn-info btn-sm' do
              %i.fa.fa-plus
              New Test
        - else
          .col-sm-2#tour-test-runs-go
            = play_button(@project, "Run")
            = render 'projects/select_browsers', scenario: @scenario
