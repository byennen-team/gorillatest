%td= link_to project.name, project_path(project)
%td= link_to raw("#{glyph('cog')} Settings"), edit_project_path(project), class: "btn btn-primary btn-xs" if project.owner?(current_user)
%td= link_to record_glyph, project.url, {target: "_blank", class: "btn btn-danger btn-xs"} if project.script_verified?
%td= play_button(project) if project.script_verified?
%td
  - unless project.script_verified?
    %a{data: {toggle: "modal", target: "#embed-modal-#{project.id}"}, class:'view-embed-code btn btn-primary btn-xs'}
      %span.glyphicon.glyphicon-eye-open
      View Embed Code
%td= link_to glyph_button("ok", "Verify Embedded Script"), project_verify_script_path(project), class:'verify-script btn btn-primary btn-xs' unless project.script_verified?
%td= link_to delete_glyph, project_path(project), method: :delete, confirm: 'Are you sure?', class: "btn btn-danger btn-xs" if project.owner?(current_user) && !project.script_verified?

