  -#      %span.sr-only 40% Complete (success)

  #add-feature.modal.fade
    .modal-dialog
      .modal-content
        = simple_form_for [project, project.features.new] do |f|
          .modal-header
            %button.close{data: {dismiss: "modal"}, aria:{hidden: true}} &times;
            %h4.modal-title Add Feature to #{project.name}
          .modal-body
            = f.input :name
          .modal-footer
            %button.btn.btn-info{data: {dismiss: "modal"}, aria: {hidden: true}} Close
            = f.submit "Add Feature", class: "btn btn-primary"

  %div.modal.fade{id: "embed-modal-#{project.id}"}
    .modal-dialog
      .modal-content{style: "width: 700px;"}
        .modal-header
          %button.close{data: {dismiss: "modal"}, aria:{hidden: true}} &times;
          %h4.modal-title Embed Code for #{project.name}
        .modal-body
          %p Insert the code below into the HEAD of the site to be tested.
          %br
          %blockquote{style: "padding: 40px; margin: 1px solid #ccc; background: #eee; font-family: Menlo"}
            :plain
              &lt;script src="https://autotest-staging.herokuapp.com/assets/recordv2.js"<br />
              &nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;data-api-url="https://autotest-staging.herokuapp.com/"<br />
              &nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;data-auth="#{project.api_key}"<br >
              &nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;data-project-id="#{project.id}"&lt;/script&gt;
        .modal-footer
          %button.btn.btn-info{data: {dismiss: "modal"}, aria: {hidden: true}} Close
  .modal.fade{id: "invite-user-#{project.id}"}
    .modal-dialog
      .modal-content
        = simple_form_for User.new, :url => '/invitation', :html => {:method => :post, class: 'invite-modal-form'} do |f|
          .modal-header
            %button.close{data: {dismiss: "modal"}, aria:{hidden: true}} &times;
            %h4.modal-title Invite A User
          .modal-body
            = f.hidden_field :project_id, value: project.id
            = f.input :email, label: "To invite your friends, and colleagues to #{project.name}, just enter their email:"
          .modal-footer
            %button.btn.btn-info{data: {dismiss: "modal"}, aria: {hidden: true}} Close
            = f.submit "Invite User", class: "btn btn-primary"

