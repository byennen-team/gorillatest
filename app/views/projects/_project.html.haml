%li
  = link_to project.name, project_path(project)
  .pull-right
    %a{data: {toggle: "modal", target: "#embed-modal-#{project.id}"}} View Embed Code
    |
    -unless Rails.env.production?
      =link_to "View Test Page", test_form_path(project_id: project.id), target: "_blank"
    |
    %a{data: {toggle: "modal", target: "#add-feature"}} Add Feature
    |
    = link_to "View Features", project_path(project)
    |
    = link_to "Delete Project", project_path(project), method: :delete, confirm: 'Are you sure?'

  -#%p.p-meta
  -#  / Due date & % Completed
  -#  %span Due : 26/2/2012 - 80% Done
  -#  .progress.progress-striped.active
  -#    .progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "40", role: "progressbar", style: "width: 40%"}
  -#      %span.sr-only 40% Complete (success)

  #add-feature.modal.fade
    .modal-dialog
      .modal-content
        = simple_form_for [project, project.features.new] do |f|
          .modal-header
            %button.close{data: {dismiss: "modal"}, aria:{hidden: true}} &times;
            %h4.modal-title Add Feature to #{project.name}
          .modal-body
            = f.input :name
          .modal-footer
            %button.btn.btn-info{data: {dismiss: "modal"}, aria: {hidden: true}} Close
            = f.submit "Add Feature", class: "btn btn-primary"

  %div.modal.fade{id: "embed-modal-#{project.id}"}
    .modal-dialog
      .modal-content{style: "width: 700px;"}
        .modal-header
          %button.close{data: {dismiss: "modal"}, aria:{hidden: true}} &times;
          %h4.modal-title Embed Code for #{project.name}
        .modal-body
          %p Insert the code below into the HEAD of the site to be tested.
          %br
          %blockquote{style: "padding: 40px; margin: 1px solid #ccc; background: #eee; font-family: Menlo"}
            :plain
              &lt;script src="http://staging.autotest.io/assets/recordv2.js"<br />
              &nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;data-api-url="http://staging.autotest.io/"<br />
              &nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;data-auth="#{current_company.api_key}"<br >
              &nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;data-project-id="#{project.id}"&lt;/script&gt;
        .modal-footer
          %button.btn.btn-info{data: {dismiss: "modal"}, aria: {hidden: true}} Close

