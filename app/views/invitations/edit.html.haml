.col-md-4.col-md-offset-4
  %h1
    Finish Signing Up
  = simple_form_for resource, :as => resource_name, :url => '/invitation/accept', html: {:method => :put, class: 'form-horizontal'}, required: true do |f|
    = devise_error_messages!

    = f.hidden_field :invitation_token
    = f.hidden_field :provider, value: session["devise.user_attributes"].try(:[], "provider")
    = f.hidden_field :uid, value: session["devise.user_attributes"].try(:[], "uid")
    = f.hidden_field :email, value: session["devise.user_attributes"].try(:[], "email")
    = f.input :first_name, input_html:{value: session["devise.user_attributes"].try(:[], "first_name") }
    = f.input :last_name, input_html: {value: session["devise.user_attributes"].try(:[], "last_name") }
    = f.input :company_name
    = f.input :location
    = f.input :phone
    - unless session["devise.user_attributes"]
      = f.input :password
      = f.input :password_confirmation

    = f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-success"
  - unless session["devise.user_attributes"]
    %p.text-center
      OR
    %br
      =link_to user_omniauth_authorize_path(:google_oauth2), class: 'google-sign-in-button btn btn-block btn-social btn-google-plus' do
        Sign up with Google
        %i.fa.fa-google-plus
    %p.text-center
      OR
    %br
      =link_to user_omniauth_authorize_path(:github), class: 'google-sign-in-button btn btn-block btn-social btn-github' do
        Sign up with Github
        %i.fa.fa-github
