.row
  .col-md-4.col-md-offset-4
    %h1
      Finish Signing Up
    = simple_form_for resource, :as => resource_name, :url => '/invitation/accept', html: {:method => :put}, required: true do |f|
      = devise_error_messages!

      = f.hidden_field :invitation_token
      = f.input :first_name
      = f.input :last_name
      = f.input :company_name
      = f.input :location
      = f.input :phone
      = f.input :password
      = f.input :password_confirmation

      = f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-primary"
