.page-content.blocky
  .container
    = render 'shared/application/side_menu'
    .mainy
      / Page title
      .page-title
        %h2
          %i.icon-desktop.color
          Projects - #{@project.name} - #{@feature.name}
          / %small Subtext for header
        %hr/
      / Page title
      .row
        .col-md-12
          / Project widget
          .awidget
            .awidget-head
              .pull-right
                %a{data: {toggle: "modal", target: "#add-scenario"}} Add Scenario
                -#|
                -#= link_to "Delete Feature", project_feature_path(@project, @feature), method: :delete, confirm: 'Are you sure?'
              %h3 Scenarios
            .awidget-body
              - if @feature.scenarios.size == 0
                %p
                  You haven't added any scenarios for this feature, would you like to
                  %a{href: new_project_feature_scenario_path(@project, @feature), data: {toggle: "modal", target: "#add-scenario"}} create one
              - else
                %ul.project
                  = render partial: 'scenarios/scenario', collection: @feature.scenarios
                .clearfix
            / Project widget
      .row
        .col-md-12
          .awidget
            .awidget-head
              %h3 Recording
            .awidget-body
              - # Create a service to load the page, and replace src w/ full http. And update ids of elements using
              - # Rack middleware maybe
              
              - # this will be monitored by onclick event and when clicked w/ reload the iframe.
              - #%a{href: "http://autotest.io/load_page?url=http://factor75.com/buy/something" id: "test123"}
              #site_recorder
              -#%iframe{frameborder: "0", height: "100%", marginheight: "0px", marginwidth: "0px", name: "iFrame", scrolling: "no", src: "https://www.factor75.com", style: "border:0px  none;", width: "100%"}



= render partial: 'scenarios/new_modal', locals: {project: @project, feature: @feature}
