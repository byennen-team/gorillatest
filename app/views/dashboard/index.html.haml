/ Page content
.page-content.blocky
  .container
    = render 'shared/application/side_menu'
    .mainy
      / Page title
      .page-title
        %h2
          %i.icon-desktop.color
          Dashboard
          %small Subtext for header
        %hr/
      / Page title
      .row
        .col-md-12
          / Project widget
          .awidget
            .awidget-head
              %h3 Projects
            .awidget-body
              %ul.project
                %li
                  %p
                    / Checkbox
                    %input{type: "checkbox", value: "check1"}/
                    / Name
                    Hospital Management System
                  %p.p-meta
                    / Due date & % Completed
                    %span Due : 26/2/2012 - 80% Done
                  .progress.progress-striped.active
                    .progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "40", role: "progressbar", style: "width: 40%"}
                      %span.sr-only 40% Complete (success)
                %li
                  %p
                    / Checkbox
                    %input{type: "checkbox", value: "check1"}/
                    / Name
                    School Download System
                  %p.p-meta
                    / Due date & % Completed
                    %span Due : 26/2/2012 - 80% Done
                  .progress.progress-striped.active
                    .progress-bar.progress-bar-warning{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "40", role: "progressbar", style: "width: 80%"}
                      %span.sr-only 80% Complete (success)
                %li
                  %p
                    / Checkbox
                    %input{type: "checkbox", value: "check1"}/
                    / Name
                    Question and Answers Script
                  %p.p-meta
                    / Due date & % Completed
                    %span Due : 26/2/2012 - 80% Done
                  .progress.progress-striped.active
                    .progress-bar.progress-bar-danger{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "40", role: "progressbar", style: "width: 20%"}
                      %span.sr-only 20% Complete (success)
              .clearfix
          / Project widget
