- content_for :title do
  Dashboard

.row
  = pape_title('Dashboard', 'fa-home')
  = render 'shared/user_metrics'

- if current_user.sign_in_count == 1
  .row
    .col-sm-12
      #welcome.well
        %button.close{"data-dismiss" => "alert"}
          Ã—
        %h1.semi-bold= t('welcome_title')
        %p
          = t('welcome')
        = link_to 'Get Started!', '#', class: 'btn btn-primary'


.row
  .col-md-12
    .awidget
      .awidget-head
        %h3 Last 5 Tests
      .awidget-body
        .col-xs-12.col-sm-12.col-md-12.col-lg-12
          .well.well-sm
            .smart-timeline
              %ul.smart-timeline-list
                - @last5_test_runs.first(5).each do |test_run|
                  //Passing Example
                  %li
                    .smart-timeline-icon{class: "#{test_run_status(test_run.status)}"}
                      %i.fa.fa-fw{class: "#{bang_or_check(test_run.status)}"}
                    .smart-timeline-time
                      %small
                        = distance_of_time_in_words_to_now(test_run.ran_at)
                        ago
                    .smart-timeline-content
                      %p
                        = link_to test_run_name(test_run), test_run_link(test_run), class: test_run_link_class(test_run.status)
                      %p
                        = test_run_platforms(test_run)
                        &nbsp;&nbsp;
                        %strong Ran At:
                        = test_run.ran_at.strftime('%m/%d/%Y %l:%M%P')
                        &nbsp;&nbsp;
                        %strong Ran By:
                        = gravatar_image_tag(test_run.user)
                        = test_run.user.name
.row
  .col-md-12
    / Project widget
    .awidget
      .awidget-head
        %h3 Projects
      .awidget-body
        - if current_user.projects.size == 0
          %p
            You don't current have any projects, would you like to
            %a{href: new_project_path, data: {toggle: "modal", target: "#add-project"}} create one
        - else
          %ul.project
            = render partial: '/projects/project', collection: current_user.projects
          .clearfix
