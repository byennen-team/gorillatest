- content_for :head do
  = javascript_include_tag 'sessions', 'forms/login'


.row
  #login-box.col-md-4.col-md-offset-4
    .awidget.login-reg
      .awidget-head
      .awidget-body
        / Page title
        .page-title
          %h2 Autotest
        .row
          .col-sm-12
            = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class: 'form-vertical', id: 'login-form' }) do |f|
              = f.error_notification
              = devise_error_messages!
              = f.input :email, placeholder: 'Email Address', label: false
              = f.input :password, placeholder: 'Password', label: false
              .row
                .col-md-6
                  = link_to "Forgot password?", new_password_path(resource_name)
                .col-md-6.pull-right
                  = f.submit 'Sign In', class: 'btn btn-primary btn-block'
                .col-md-6
                  = link_to "Don't have an account?", new_user_registration_path
    #auth_options.row
      .col-md-6
        =link_to user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-block btn-default' do
          %i.fa.fa-google-plus
          Sign in with Google
      .col-md-6
        =link_to user_omniauth_authorize_path(:github), class: 'btn btn-block btn-default' do
          %i.fa.fa-github
          Sign in with Github
