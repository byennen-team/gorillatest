- content_for :head do
  = javascript_include_tag 'pages', 'forms/login'
  = stylesheet_link_tag 'sessions'
- content_for :title do
  Change your Password

.row
  #login-box.col-md-4.col-md-offset-4
    .login-reg
      .text-center
        = image_tag('layout/gorilla-test-head.svg', class: 'logo')
      .row
        .col-sm-12
          %h2 Gorilla Test - Change your Password
            = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { class: 'form-vertical', id: 'login-form', :method => :put }) do |f|
              = f.error_notification
              = devise_error_messages!
              = f.hidden_field :reset_password_token
              = f.input :password, :autofocus => true, placeholder: "New Password", label: false
              = f.input :password_confirmation, placeholder: "Confirm New Password", label: false
              = f.submit 'Change Password', class: 'btn btn-info btn-block'
