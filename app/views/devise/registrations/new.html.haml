- content_for :head do
  = javascript_include_tag 'forms/registration', 'sessions'

- content_for :title do
  Sign Up Free

.row
  #login-box.col-md-4.col-md-offset-4
    .login-reg
      .text-center
        = image_tag('layout/gorilla-test-head.svg', class: 'logo')
      .row
        .col-sm-12
          = simple_form_for(resource, :as => resource_name, :url => user_registration_path, :html => {class: 'form-vertical', id: 'registration-form' }) do |f|
            = f.input :email
            = f.input :password
            = f.input :password_confirmation


      #auth_options.row
        .col-md-6
          =link_to user_omniauth_authorize_path(:google_oauth2), class: 'btn btn-block btn-default' do
            %i.fa.fa-google-plus
            Sign in with Google
        .col-md-6
          =link_to user_omniauth_authorize_path(:github), class: 'btn btn-block btn-default' do
            %i.fa.fa-github
            Sign in with Github
      .row
        .options.col-sm-12.text-center
          %p Your Gorilla Test account can be used to access any Gorilla Test product or service.
          = link_to 'I already have a Gorilla Test account', login_path
