.page-content.blocky
  .container
    .row
      .col-md-12
        .awidget.login-reg
          .awidget-head
          .awidget-body
            / Page title
            .page-title.text-center
              %h2 Sign Up is Free!
              %hr/
            / Page title
            %br/
            = simple_form_for(resource, :as => resource_name, :url => user_registration_path, :html => {:class => 'form-vertical' }) do |f|
              = f.error_notification
              = devise_error_messages!
              .form-inputs
                = f.input :first_name, required: false
                = f.input :last_name, required: false
                = f.input :email
                = f.input :password
                = f.input :password_confirmation
                = f.input :company_name, label: 'Company Name', required: false
                = f.input :phone
                = f.input :location
              .row
                .form-group
                  .col-lg-12
                    = f.submit 'Sign Up', class: 'btn btn-success btn-lg btn-block'
