.page-content.blocky
  .container
    = render 'sidebar'
    %div.tab-content
      #home.tab-pane.active
        %h2 Edit User
        = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
          = devise_error_messages!

          = f.input :email
          = f.input :first_name
          = f.input :last_name
          = f.input :phone
          = f.input :location
          = f.input :password
          = f.input :password_confirmation
          = f.input :current_password
          = f.submit "Update", class: "btn btn-success"
      #change-plan.tab-pane
        = render 'devise/registrations/plan_options'

        %p You have used #{current_user.invitations_sent_count} of your #{current_user.plan.num_users-1} available invitations.

        %h3 Upgrade your plan
        .row
          .col-md-12
            - Plan.all.each do |plan|
              %p
                = plan.name
                - if plan == current_user.plan
                  (Current)
                - else
                  - if plan.id > current_user.plan.id
                    - if current_user.credit_card
                      = link_to "Upgrade Now", upgrade_path(plan.id.to_s), method: :post
                    - else
                      = link_to "Upgrade Now", get_upgrade_path(plan.id.to_s)

        / = form_tag redeem_coupon_path, method: :post do
        /   %p
        /     Please enter your coupon code: #{text_field_tag :coupon_code, nil, class: "coupon-input form-control"}
        /     #{submit_tag "Redeem Coupon", class: 'btn btn-success'}
      #cancel-account.tab-pane
        %h2 Unhappy?
        %p{style: 'font-size: 1.4em'}
          We're sorry to see you go.  If there is anything we can help you with please
          %a{href: "#"} contact us.
        %br
        = button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-success"

#billing-modal.modal.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{data: {dismiss: "modal"}, aria:{hidden: true}} &times;
        %h4.modal-title Billing Info
      .modal-body
        %p Billing Form Goes Here
      .modal-footer
        %button.btn.btn-info{data: {dismiss: "modal"}, aria: {hidden: true}} Close
        %button.btn.btn-success{data: {dismiss: "modal"}, aria: {hidden: true}} Save
