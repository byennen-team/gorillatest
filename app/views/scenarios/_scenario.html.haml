%li
  %p
    .pull-right
      %a Run Scenario
      |
      = link_to "Delete Scenario", project_feature_scenario_path(@project, @feature, scenario), method: :delete, confirm: "Are you sure?"
    / Checkbox
    %input{type: "checkbox", value: "check1"}/
    / Name
    = link_to scenario.name
  %p.p-meta
    / Due date & % Completed
    %span Due : 26/2/2012 - 80% Done
    .progress.progress-striped.active
      .progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "40", role: "progressbar", style: "width: 40%"}
        %span.sr-only 40% Complete (success)
