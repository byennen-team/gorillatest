        }
        })();
    %script{type: 'text/javascript'}
      pusher = new Pusher("#{Pusher.key}")
      window.pusher = pusher
    - if !Rails.env.development? && current_user
      :javascript
        UserVoice=window.UserVoice||[];(function(){var uv=document.createElement('script');uv.type='text/javascript';uv.async=true;uv.src='//widget.uservoice.com/q8EbGysZwykliONIjHQ1g.js';var s=document.getElementsByTagName('script')[0];s.parentNode.insertBefore(uv,s)})();

        UserVoice.push(['set', {
          accent_color: '#808283',
          trigger_color: 'white',
          trigger_background_color: 'rgba(46, 49, 51, 0.6)'
        }]);

        UserVoice.push(['identify', {
          email: "#{escape_javascript current_user.email}"
        }])
        UserVoice.push(['addTrigger', { mode: 'contact', trigger_position: 'bottom-right' }]);
        UserVoice.push(['autoprompt', {}]);

    = yield(:head)
    = favicon_link_tag 'favicon.ico'
    = csrf_meta_tags

  %body
    / Logo & Navigation starts
    .navbar.navbar-inverse.navbar-fixed-top.row{role: "navigation"}
      .container
        .navbar-header
          %a.navbar-brand{href: "/projects"} autotest
        - if current_user
          = render '/layouts/user'

    %br{style: "clear: both;"}
    %br
    .container
      .row
        .col-md-5
          - flash.each do |name, msg|
            - if msg.is_a?(String)
              .alert.fade.in{:class => "alert-#{name == :notice ? "success" : "danger"}"}
                %a.close{"data-dismiss" => "alert"} Ã—
                = content_tag :div, msg, :id => "flash_#{name}"

      = yield
    #invite-user.modal.fade
      .modal-dialog
        .modal-content
          = simple_form_for User.new, :url => '/invitation', :html => {:method => :post, class: 'invite-modal-form'} do |f|
            .modal-header
              %button.close{data: {dismiss: "modal"}, aria:{hidden: true}} &times;
              %h4.modal-title Invite A User
            .modal-body
              = f.input :email
            .modal-footer
              %button.btn.btn-info{data: {dismiss: "modal"}, aria: {hidden: true}} Close
              = f.submit "Invite User", class: "btn btn-primary"
