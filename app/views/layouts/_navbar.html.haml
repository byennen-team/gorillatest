.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .navbar-inner
    .container-fluid
      .navbar-header
        %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar

      #logo-group
        %span#logo
          = link_to image_tag('layout/gorilla-test-icon.svg'), root_path
          %h1.hide Gorilla Test

      .navbar-collapse.collapse
        %ul.nav.navbar-nav
          - if current_user.present?
            %li= render 'layouts/recent_updates'
          - else
            %li= nav_link 'FAQs', faqs_path
            %li= nav_link 'Pricing', pricing_path
          - unless current_user.present?
            %li= nav_link 'Documentation', documentation_path
          -#%li= link_to 'Contact', '#'
          -#%li= link_to 'Blog', '#'
        - if current_user.present?
          %ul#sparks.nav.navbar-nav.pull-right
            %li.sparks-info
              %h5
                Minutes
                %span.txt-color-blue
                  = current_user.available_minutes
                  Remaining
            %li.sparks-info
              %h5
                Plan
                %span= link_to current_user.plan.name, change_plan_path
          %ul.nav.navbar-nav.pull-right
            %li= link_to 'Invite', new_invitation_path #TODO: fix issues with buttons in nav bar. -Lance #, class: 'btn btn-warning btn-xs'
        - else
          %ul.nav.navbar-nav.pull-right
            %li= link_to 'Request Invite', beta_invitation_path #, class: 'btn btn-danger'
            %li= nav_link 'Login', login_path
