!!!
%html
  %head
    %title= content_for?(:title) ? "Gorilla Test - " + yield(:title) : "Gorilla Test"
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no"}
    %meta{:content => content_for?(:description) ? yield(:description) : "AutoTest Description", :name => "description"}
    %meta{:content => content_for?(:keywords) ? yield(:keywords) : "AutoTest Keywords", :name => "keywords"}
    = favicon_link_tag 'favicon.ico'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    - if Rails.env.staging?
      = javascript_include_tag "https://www.gorillatest.com/assets/recordv2.js",
                                data: {api_key:    "54f9c36ad8b67b61916b237b58c073bf",
                                       project_id: "53a45b5d6261320002010000"}
    = yield(:head)
    = csrf_meta_tags
  %body{:id => "#{controller_name}-#{action_name}"}
    - unless params[:controller] == "registrations" || params[:controller] == "sessions" || params[:controller] == "passwords" || params[:action] == "beta_invitation"
      = render 'layouts/navbar'
    = render 'layouts/messages'
    = yield
    = render 'layouts/footer'
    = analytics_init if Rails.env.production?
